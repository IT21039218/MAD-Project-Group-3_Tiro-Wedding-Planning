<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_ordername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/order_name" />

    <EditText
        android:id="@+id/edit_orderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/order_id"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_orderdeatail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/order_deatail"
        android:minHeight="48dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:backgroundTint="#BC1F1F"
            android:text="Submit" />

        <Button
            android:id="@+id/display_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1"

            android:text="Diaplay" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit"
            android:visibility="gone" />


    </LinearLayout>


</LinearLayout>