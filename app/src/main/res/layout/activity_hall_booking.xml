<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C18DD6"
    android:textAlignment="gravity"
    tools:context=".HallBooking">

    <ScrollView
        android:layout_width="500dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_baseline_menu"
                    android:contentDescription="Menu"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/menu"
                    android:paddingLeft="10dp"
                    android:text="Hall Booking"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <EditText
                    android:id="@+id/Search"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/search_bg"
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:drawablePadding="16dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Search..."
                    android:inputType="textPersonName"
                    android:paddingStart="16dp"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textSize="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.568"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="RtlCompat" />
            </RelativeLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="true"
                android:rowCount="2"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="230dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:padding="80dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/h1" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:text="Mitton Hall"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btnh1"
                            android:layout_width="120dp"
                            android:layout_height="38dp"
                            android:layout_marginTop="-5dp"
                            android:background="@color/purple_700"
                            android:text="See Package "
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnh2"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/purple_700"
                            android:text="Book now "
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="280dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/h2" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:text="Mount Hall"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btnh3"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="-5dp"
                            android:text="See Package "
                            android:background="@color/purple_700"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnh4"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="20dp"
                            android:text="Book now "
                            android:textColor="@color/white"
                            android:background="@color/purple_700"
                            android:textSize="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="280dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/h3" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:text="Skinners Hall"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btnh5"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="-5dp"
                            android:text="See Package "
                            android:background="@color/purple_700"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnh6"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="20dp"
                            android:text="Book now "
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:background="@color/purple_700"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="280dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/h4" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="12dp"
                            android:text="Banquet Hall"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <Button
                            android:id="@+id/btnh7"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="-5dp"
                            android:text="See Package "
                            android:background="@color/purple_700"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <Button
                            android:id="@+id/btnh8"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/purple_700"
                            android:text="Book now "
                            android:textColor="@color/white"
                            android:textSize="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>